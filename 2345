+++ b/src/CoolApp/Services/ApiAuthService.cs
@@ -0,0 +1,84 @@
+using System.Net.Http.Json;
+using Microsoft.Maui.Storage;
+
+namespace CoolApp.Services
+{
+    public interface IApiAuthService
+    {
+        Task<(bool Success, string? Error)> RegisterAsync(string email, string password);
+        Task<(bool Success, string? Error)> LoginAsync(string email, string password);
+        Task<string?> GetTokenAsync();
+        Task LogoutAsync();
+    }
+
+    public class ApiAuthService : IApiAuthService
+    {
+        private readonly HttpClient _client;
+        private const string TokenKey = "coolapp_jwt";
+
+        public ApiAuthService(HttpClient client)
+        {
+            _client = client;
+        }
+
+        public async Task<(bool Success, string? Error)> RegisterAsync(string email, string password)
+        {
+            var res = await _client.PostAsJsonAsync("/api/auth/register", new { email, password });
+            if (!res.IsSuccessStatusCode)
+            {
+                var err = await res.Content.ReadFromJsonAsync<Dictionary<string, string?>>();
+                return (false, err?["error"] ?? "Ошибка регистрации");
+            }
+
+            var payload = await res.Content.ReadFromJsonAsync<Dictionary<string, string?>>();
+            if (payload != null && payload.TryGetValue("token", out var token) && token != null)
+            {
+                await SecureStorage.Default.SetAsync(TokenKey, token);
+                return (true, null);
+            }
+            return (false, "Токен не получен");
+        }
+
+        public async Task<(bool Success, string? Error)> LoginAsync(string email, string password)
+        {
+            var res = await _client.PostAsJsonAsync("/api/auth/login", new { email, password });
+            if (!res.IsSuccessStatusCode)
+            {
+                var err = await res.Content.ReadFromJsonAsync<Dictionary<string, string?>>();
+                return (false, err?["error"] ?? "Ошибка входа");
+            }
+            var payload = await res.Content.ReadFromJsonAsync<Dictionary<string, string?>>();
+            if (payload != null && payload.TryGetValue("token", out var token) && token != null)
+            {
+                await SecureStorage.Default.SetAsync(TokenKey, token);
+                return (true, null);
+            }
+            return (false, "Токен не получен");
+        }
+
+        public Task<string?> GetTokenAsync() => SecureStorage.Default.GetAsync(TokenKey);
+
+        public Task LogoutAsync() => SecureStorage.Default.RemoveAsync(TokenKey);
+    }
+}
