diff --git a/src/CoolApp/MauiProgram.cs b/src/CoolApp/MauiProgram.cs
new file mode 100644
index 0000000..1111111
--- /dev/null
+++ b/src/CoolApp/MauiProgram.cs
@@ -0,0 +1,66 @@
+using Microsoft.Extensions.DependencyInjection;
+using CoolApp.Services;
+using CoolApp.ViewModels;
+using System;
+
+namespace CoolApp
+{
+    public static class MauiProgram
+    {
+        public static MauiApp CreateMauiApp()
+        {
+            var builder = MauiApp.CreateBuilder();
+            builder
+                .UseMauiApp<App>()
+                .ConfigureFonts(fonts => fonts.AddFont("OpenSans-Regular.ttf", "OpenSansRegular"));
+
+            // Configure API base address (change for production)
+            var apiBase = "http://10.0.2.2:5000"; // emulator -> host; for simulator/desktop use http://localhost:5000 or actual IP
+            builder.Services.AddHttpClient("api", client =>
+            {
+                client.BaseAddress = new Uri(apiBase);
+            });
+
+            builder.Services.AddSingleton<IApiAuthService>(sp =>
+            {
+                var clientFactory = sp.GetRequiredService<IHttpClientFactory>();
+                var client = clientFactory.CreateClient("api");
+                return new ApiAuthService(client);
+            });
+
+            builder.Services.AddTransient<AuthViewModel>();
+            builder.Services.AddTransient<Pages.LoginPage>();
+
+            return builder.Build();
+        }
+    }
+}
